<h1>New Ad</h1>

<div class="row">
    <%= form_for @ad do |f| %>
      <div class="form-group">
        <!-- We use f.label to display title this functionality is provided by form_for
      which yiels a form building object that in turn provides f.label which in turn
    creates an HTML <label> tag for the object </label> -->
        <%= f.label :title %>
        <!-- f.text_field is another method from FormHelper that creates an <input> tag-->
          <%= f.text_field :title, class: 'form-control', placeholder: "Enter ad title" %>
      </div>
      <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control', placeholder: "Enter ad body" %>
      </div>
      <div class="form-group">
          <%= f.label :price %>
          <%= f.number_field :price, class: 'form-control', placeholder: 99 %>
      </div>
      <div class="form-group">
        <!-- f.submit is another FormHelper method -->
          <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
