<h1>All Posts</h1>

<!-- iterate over each post in @posts. For each post, create a link with post.title as the
text that links to /posts/id, with the id from the post.id -->
<% @posts.each do |post| %>
  <p><%= link_to post.title, post %></p>
  <div class="media">
       <div class="media-body">
         <h4 class="media-heading">
           <%= link_to post.title, post %>
         </h4>
       </div>
     </div>
<% end %>
